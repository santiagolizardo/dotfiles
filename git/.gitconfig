[color]
ui = auto
 
[color "branch"]
current = yellow reverse
local = yellow
remote = green
 
[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
 
[color "status"]
added = yellow
changed = green
untracked = cyan
 
[alias]
st = status
ci = commit
br = branch
co = checkout
df = diff
dc = diff --cached
lg = log -p
lol = log --graph --decorate --pretty=oneline --abbrev-commit
lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
ls = ls-files

[include]
path = ~/.gitconfig_local

[pull]
rebase = false

# Create a file ~/.gitconfig_local with the following content:
