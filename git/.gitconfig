[color]
ui = auto
 
[color "branch"]
current = yellow reverse
local = yellow
remote = green
 
[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
 
[color "status"]
added = yellow
changed = green
untracked = cyan
 
[alias]
st = status
ci = commit
br = branch
co = checkout
df = diff
dc = diff --cached
ls = ls-files

[pull]
rebase = false

[init]
defaultBranch = main

[user]
name = Santiago Lizardo

# Create a file ~/.gitconfig-*.conf with the following content:
#
# [user]
# email = first.name@localhost

[includeIf "gitdir:~/src/work"]
path = ~/.gitconfig-work.conf

[includeIf "gitdir:~/src/play"]
path = ~/.gitconfig-play.conf

